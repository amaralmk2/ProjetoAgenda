
    <%- include('includes/head') %>
    <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-5">

          <h1 class="display-1 text-center"> Login </h1>
          <p class="text-center lead">faça login/criar conta</p>  

          <%- include('includes/messages'); %>

      </div>
        <div class="row">
          <div class="col-lg">
          <h3>Cadastre-se</h3>  
          <p>se você ainda não tem conta, preencha o formulario abaixo.</p>

          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="mb-3">
              <label>Seu Email</label>
              <input type="email" class="form-control" name="email">
            </div>

            <div class="mb-3">
              <label>Sua Senha</label>
              <input type="password" class="form-control" name="senha">
            </div>

            <button type="submit" class="btn btn-primary">Enviar</button>
          </form>

          </div>

            <div class="col-lg">

              <h3>Fazer Login</h3>  
              <p>Entre com seus dados.</p>
              
              <form class="form-login" action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="mb-3">
                  <label>Seu Email</label>
                  <input type="email" class="form-control" name="email">
                </div>
    
                <div class="mb-3">
                  <label>Sua Senha</label>
                  <input type="password" class="form-control" name="senha">
                </div>
    
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>

            </div>

          </div>

        </div>
    </div>

    
    <%- include('includes/footer') %>